<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="styledAlertDialogTheme" format="reference" />
    <attr name="alertDialogTitleDividerBackground" format="reference|color" />
    <attr name="alertDialogTitleDividerHeight" format="dimension" />
    <attr name="alertDialogTitleHeight" format="dimension" />
    <attr name="alertDialogButtonBarHeight" format="dimension" />
    <attr name="alertDialogListItemHeight" format="dimension" />
    <attr name="alertDialogListItemTextColor" format="dimension" />
    <attr name="alertDialogListDivider" format="dimension" />
    <attr name="alertDialogListItemBackground" format="reference" />

    <attr name="styledAlertDialogStyle" format="reference" />
    <attr name="buttonBarStyle" format="reference" />
    <attr name="buttonBarButtonStyle" format="reference" />
    <attr name="buttonBarDividerHorizontal" format="reference" />
    <attr name="buttonBarDividerVertical" format="reference" />

    <declare-styleable name="StyledAlertDialog">
        <attr name="layout" format="reference" />
        <attr name="listLayout" format="reference" />
        <attr name="listItemLayout" format="reference" />
        <attr name="multiChoiceItemLayout" format="reference" />
        <attr name="singleChoiceItemLayout" format="reference" />
    </declare-styleable>

    <declare-styleable name="LinearLayoutICS">
        <!-- Drawable to use as a vertical divider between buttons. -->
        <attr name="linearLayoutDivider" format="reference" />
        <!-- Setting for which dividers to show. -->
        <attr name="showDividers">
            <flag name="none" value="0" />
            <flag name="beginning" value="1" />
            <flag name="middle" value="2" />
            <flag name="end" value="4" />
        </attr>
        <!-- Size of padding on either end of a divider. -->
        <attr name="dividerPadding" format="dimension" />
    </declare-styleable>
</resources>
